@model List<ArellanoSysDevExam.Models.Domain.Employee>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Employees</h1>

<table class="table">

    <thead>
        <tr>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Date Hired</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.last_name</td>
                <td>@employee.first_name</td>
                <td>@employee.middle_name</td>
                <td>@employee.datehired.ToString("dd-MM-yyy")</td>
                <td><a href="employees/View/@employee.employeeid">Edit/Delete</a></td>
            </tr>
        }
    </tbody>

</table>