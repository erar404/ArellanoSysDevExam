@model ArellanoSysDevExam.Models.UpdateBranchViewModel

@{
}
<h1>Edit or Delete Employee</h1>
<form method="post" action="View" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Branch ID</label>
        <input type="text" class="form-control" asp-for="branchid" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Branch Name</label>
        <input type="text" class="form-control" asp-for="branchname">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Branch Code</label>
        <input type="text" class="form-control" asp-for="branchcode">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="address">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Barangay</label>
        <input type="text" class="form-control" asp-for="barangay">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">City</label>
        <input type="text" class="form-control" asp-for="city">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Permit Number</label>
        <input type="text" class="form-control" asp-for="permitnumber">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Branch Manager</label>
        <input type="text" class="form-control" asp-for="branch_manager">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Date Opened</label>
        <input type="date" class="form-control" asp-for="dateopened">
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" asp-for="isactive" checked>
        <label class="form-check-label" for="flexCheckChecked">
            Active Branch
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <button type="submit" class="btn btn-danger" 
    asp-action="Delete" 
    asp-controller="Branch">Delete</button>
</form>